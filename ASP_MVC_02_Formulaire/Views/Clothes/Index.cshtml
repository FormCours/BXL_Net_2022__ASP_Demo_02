@model IEnumerable<Clothes>
@using ASP_MVC_02_Formulaire.Helpers

@{
    ViewBag.Title = "Liste de vetements";
}

<h1>Liste de vetements</h1>

<a class="btn btn-dark" asp-controller="Clothes" asp-action="Add">Ajouter un vetement</a>

@* Pas d'equivalent pour les "DisplayNameFor" et "DisplayFor" en Tag Helper*@
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Color)</th>
            <th>@Html.DisplayNameFor(m => m.Size)</th>
            <th>@Html.DisplayNameFor(m => m.WashTemp)</th>
            <th>@Html.DisplayNameFor(m => m.DryerAllow)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Clothes clothes in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => clothes.Name)</td>
                <td>@Html.DisplayFor(x => clothes.Color)</td>
                <td>@Html.DisplayFor(x => clothes.Size)</td>
                <td>@Html.DisplayFor(x => clothes.WashTemp)</td>
                <td>@Html.DisplayYesNo(clothes.DryerAllow)</td>
                @*<td>@(clothes.DryerAllow ? "Oui" : "Non")</td>*@
                <td>@Html.DisplayFor(x => clothes.Price)</td>

                 <td>
                    <a asp-controller="Clothes" asp-action="Detail" asp-route-Id="@clothes.Id" >Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>